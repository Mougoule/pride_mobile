<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.pridemobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:name="fr.pridemobile.application.PrideApplication"
        android:allowBackup="true"
        android:icon="@drawable/pride5"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- Splash screen -->
        <activity
            android:name="fr.pridemobile.activity.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/PrideThemeNoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="fr.pridemobile.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/PrideThemeNoTitle"
            android:screenOrientation="portrait" >
          <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->  
        </activity>
        
        <activity
            android:name="fr.pridemobile.activity.InscriptionActivity"
            android:label="@string/app_name"
            android:theme="@style/PrideThemeNoTitle"
            android:screenOrientation="portrait"
            android:noHistory="true" >
        </activity>
        
        <activity
            android:name="fr.pridemobile.activity.MesParticipationsActivity"
            android:label="@string/app_name"
            android:theme="@style/PrideThemeNoTitle"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="fr.pridemobile.activity.MesProjetsActivity"
            android:label="@string/app_name"
            android:theme="@style/PrideThemeNoTitle"
            android:screenOrientation="portrait" >
        </activity>
        
         <activity
            android:name="fr.pridemobile.activity.DetailProjetActivity"
            android:label="@string/app_name"
            android:theme="@style/PrideThemeNoTitle"
            android:screenOrientation="portrait" >
        </activity>
        
         <activity
            android:name="fr.pridemobile.activity.CreerProjetActivity"
            android:label="@string/app_name"
            android:theme="@style/PrideThemeNoTitle"
            android:screenOrientation="portrait"
            android:noHistory="true" >
        </activity>
        
         <activity
            android:name="fr.pridemobile.activity.AjoutCollaborateurActivity"
            android:label="@string/app_name"
            android:theme="@style/PrideThemeNoTitle"
            android:screenOrientation="portrait" >
        </activity>
        
    </application>

</manifest>